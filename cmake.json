		"prefix" :[
			"CMAKE_SOURCE_DIR"
		],
		"body" : [
			"CMAKE_SOURCE_DIR"
		]
},

"current source directory variable": {
		"prefix" :[
			"CMAKE_CURRENT_SOURCE_DIR"
