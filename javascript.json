{
	"if statement": {
		"prefix" : [
			"if"
		],
		"body": [
			"if(${1:cond}) {",
				"${2}",
			"} ${0}"
		]
	},

    "else statement": {
		"prefix" : [
			"else"
		],
		"body": [
			"else {",
				"${0}",
			"}"
		]
	},
    "switch statement": {
		"prefix" : [
			"switch"
		],
		"body": [
			"switch(${1:cond}) {",
				"${0}",
			"}"
		]
	},

    "case": {
		"prefix" : [
			"case"
		],
		"body": [
			"case ${1:expression}:",
				"${0}",
				"break;"
		]
	},
	"for loop": {
		"prefix" :[
			"for"
		],
		"body" : [
			"for(auto ${1:i} = ${2:0}; ${1:i} < ${3:n}; ${4}) {",
                         "   ${0}",
			"}"
		]
	}, 

   "while loop": {
		"prefix" :[
			"while"
		],
		"body" : [
			"while(${1:condition}) {",
                        "   ${0}",
			"}"
		]
	}, 

    "do while loop": {
		"prefix" :[
			"do",
			"dow"
		],
		"body" : [
			"do {",
                        "   ${0}",
			"} while(${1:condition});"
		]
	},
	"function": {
		"prefix": [
			"function"
		],
		"body": [
			"function ${1:name}(${2:params}) ${3:retType}{",
			"     ${0}",
			"}"
		]
	}

}


